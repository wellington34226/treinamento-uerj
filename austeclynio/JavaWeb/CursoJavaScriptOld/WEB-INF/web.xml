<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<resource-ref>
        <description>cursoJavasCriptCEPS</description>
        <res-ref-name>jdbc/poolDBCEPSCorreios</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
	</resource-ref>	
	
	<resource-ref>
        <description>cursoJavasCript</description>
        <res-ref-name>jdbc/poolDBCursos</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
	</resource-ref>	
    
    <servlet>
        <servlet-name>pegaCEP</servlet-name>
        <servlet-class>web.ControllerPegaCEP</servlet-class>
    </servlet>

    <servlet-mapping>
	<servlet-name>pegaCEP</servlet-name>
	<url-pattern>/PegaCEP</url-pattern>
    </servlet-mapping>
	
	<servlet>
        <servlet-name>validaDadosEntrada</servlet-name>
        <servlet-class>web.ControllerValidaDadosEntrada</servlet-class>
    </servlet>

    <servlet-mapping>
	<servlet-name>validaDadosEntrada</servlet-name>
	<url-pattern>/ValidaDadosEntrada</url-pattern>
    </servlet-mapping>
	
	<servlet>
        <servlet-name>enviarMenu</servlet-name>
        <servlet-class>web.ControllerEnviarMenu</servlet-class>
    </servlet>

    <servlet-mapping>
	<servlet-name>enviarMenu</servlet-name>
	<url-pattern>/EnviarMenu</url-pattern>
    </servlet-mapping>
  
  
</web-app>